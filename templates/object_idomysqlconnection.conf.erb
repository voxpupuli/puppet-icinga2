  cleanup = {
    <%- @cleanup.sort_by {|key, value| key}.each do |key, value| -%>
    <%= key %> = <%= value %>
    <%- end -%>
  }
  <%- end -%>

  <%- if @categories.length != 0 -%>
  categories = <%= @categories.map {|category| "#{category}"}.join(' | ') %>
  <%- end -%>
